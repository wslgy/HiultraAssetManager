<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SpringViewPager -->
    <declare-styleable name="SpringIndicator">

        <!-- tab text color -->
        <attr name="siTextColor" format="reference" />
        <!-- tab text color which is selected -->
        <attr name="siSelectedTextColor" format="reference" />
        <!-- tab item bg -->
        <attr name="siTextBg" format="reference" />
        <!-- tab text size -->
        <attr name="siTextSize" format="dimension" />
        <!-- indicator bg color -->
        <attr name="siIndicatorColor" format="reference" />
        <!-- indicator bg colors. should equals your titles count -->
        <attr name="siIndicatorColors" format="reference" />
        <!-- max indicator radius -->
        <attr name="siRadiusMax" format="dimension" />
        <!-- min indicator radius when moving -->
        <attr name="siRadiusMin" format="dimension" />
    </declare-styleable>

    <!-- HorizontalProgressBarWithProgress -->
    <attr name="progress_unreach_color" format="color"/>
    <attr name="progress_unreach_height" format="dimension"/>
    <attr name="progress_reach_color" format="color"/>
    <attr name="progress_reach_height" format="dimension"/>
    <attr name="progress_text_color" format="color"/>
    <attr name="progress_text_size" format="dimension"/>
    <attr name="progress_text_offset" format="dimension"/>

    <declare-styleable name="HorizontalProgressBarWithProgress">
        <attr name="progress_unreach_color"/>
        <attr name="progress_unreach_height"/>
        <attr name="progress_reach_color"/>
        <attr name="progress_reach_height"/>
        <attr name="progress_text_color"/>
        <attr name="progress_text_size"/>
        <attr name="progress_text_offset"/>
    </declare-styleable>


    <declare-styleable name="RatioImageView">
        <attr name="riv_ratio" format="float"/>
    </declare-styleable>

</resources>