<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/data_theme_image" />

    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            
            <RelativeLayout style="@style/data_layout_common" >

        <ImageView
            style="@style/data_image_common"
            android:background="@drawable/image_base" />

        <TextView
            style="@style/data_text_common"
            android:text="基础信息" />

        <ProgressBar
            android:id="@+id/pb_base"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="140dp"
            android:layout_height="3dp"
            android:layout_centerInParent="true"
            android:max="100" />

        <TextView
            style="@style/data_text_common"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="同步" />

        <CheckBox
            android:id="@+id/cb_base"
            style="@style/data_checkbox_common" />
    </RelativeLayout>

    <View style="@style/SingleLineZero" />

    <RelativeLayout style="@style/data_layout_common" >

        <ImageView
            style="@style/data_image_common"
            android:background="@drawable/image_transfer" />

        <TextView
            style="@style/data_text_common"
            android:text="调拨信息" />

        <ProgressBar
            android:id="@+id/pb_transfer"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="140dp"
            android:layout_height="3dp"
            android:layout_centerInParent="true"
            android:max="100" />

        <TextView
            style="@style/data_text_common"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="同步" />

        <CheckBox
            android:id="@+id/cb_transfer"
            style="@style/data_checkbox_common" />
    </RelativeLayout>

    <View style="@style/SingleLineZero" />

    <RelativeLayout style="@style/data_layout_common" >

        <ImageView
            style="@style/data_image_common"
            android:background="@drawable/image_scrap" />

        <TextView
            style="@style/data_text_common"
            android:text="报废信息" />

        <ProgressBar
            android:id="@+id/pb_reject"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="140dp"
            android:layout_height="3dp"
            android:layout_centerInParent="true"
            android:max="100" />

        <TextView
            style="@style/data_text_common"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="同步" />

        <CheckBox
            android:id="@+id/cb_reject"
            style="@style/data_checkbox_common" />
    </RelativeLayout>

    <View style="@style/SingleLineZero" />

    <RelativeLayout style="@style/data_layout_common" >

        <ImageView
            style="@style/data_image_common"
            android:background="@drawable/image_stop" />

        <TextView
            style="@style/data_text_common"
            android:text="报停信息" />

        <ProgressBar
            android:id="@+id/pb_stop"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="140dp"
            android:layout_height="3dp"
            android:layout_centerInParent="true"
            android:max="100" />

        <TextView
            style="@style/data_text_common"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="同步" />

        <CheckBox
            android:id="@+id/cb_stop"
            style="@style/data_checkbox_common" />
    </RelativeLayout>

    <View style="@style/SingleLineZero" />

    <RelativeLayout style="@style/data_layout_common" >

        <ImageView
            style="@style/data_image_common"
            android:background="@drawable/image_inspect" />

        <TextView
            style="@style/data_text_common"
            android:text="巡检信息" />

        <ProgressBar
            android:id="@+id/pb_inspect"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="140dp"
            android:layout_height="3dp"
            android:layout_centerInParent="true"
            android:max="100" />

        <TextView
            style="@style/data_text_common"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="同步" />

        <CheckBox
            android:id="@+id/cb_inspect"
            style="@style/data_checkbox_common" />
    </RelativeLayout>

    <View style="@style/SingleLineZero" />

    <RelativeLayout style="@style/data_layout_common" >

        <ImageView
            style="@style/data_image_common"
            android:background="@drawable/image_inventory" />

        <TextView
            style="@style/data_text_common"
            android:text="盘点信息" />

        <ProgressBar
            android:id="@+id/pb_check"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="140dp"
            android:layout_height="3dp"
            android:layout_centerInParent="true"
            android:max="100" />

        <TextView
            style="@style/data_text_common"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="同步" />

        <CheckBox
            android:id="@+id/cb_check"
            style="@style/data_checkbox_common" />
    </RelativeLayout>

    <View style="@style/SingleLineZero" />

    <RelativeLayout style="@style/data_layout_common" >

        <ImageView
            style="@style/data_image_common"
            android:background="@drawable/inage_handle" />

        <TextView
            style="@style/data_text_common"
            android:text="处置信息" />

        <ProgressBar
            android:id="@+id/pb_handle"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="140dp"
            android:layout_height="3dp"
            android:layout_centerInParent="true"
            android:max="100" />

        <TextView
            style="@style/data_text_common"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="同步" />

        <CheckBox
            android:id="@+id/cb_handle"
            style="@style/data_checkbox_common" />
    </RelativeLayout>

    <View style="@style/SingleLineZero" />

    <RelativeLayout style="@style/data_layout_common" >

        <ImageView
            style="@style/data_image_common"
            android:background="@drawable/image_repair" />

        <TextView
            style="@style/data_text_common"
            android:text="维修信息" />

        <ProgressBar
            android:id="@+id/pb_repair"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="140dp"
            android:layout_height="3dp"
            android:layout_centerInParent="true"
            android:max="100" />

        <TextView
            style="@style/data_text_common"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="同步" />

        <CheckBox
            android:id="@+id/cb_repair"
            style="@style/data_checkbox_common" />
    </RelativeLayout>

    <View style="@style/SingleLineZero" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_data_upload"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/selector_edittext"
                android:text="上传" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_data_download_only"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/selector_edittext"
                android:text="下载" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_data_del"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/selector_edittext"
                android:text="清空" />
        </LinearLayout>
    </LinearLayout>
            
        </LinearLayout>
        
        
    </ScrollView>

</LinearLayout>