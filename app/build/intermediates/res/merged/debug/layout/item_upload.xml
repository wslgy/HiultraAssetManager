<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
     <LinearLayout
        android:id="@+id/ll_upload"
        style="@style/default_ll" >

        <TextView
            android:id="@+id/tv_title_upload"
            style="@style/default_text"
            android:text="@string/test_text" />

        <TextView
            android:id="@+id/tv_point_upload"
            style="@style/default_right_center"
            android:text="@string/text_click_upload" />

        <ProgressBar
            android:id="@+id/pb_upload"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:visibility="invisible"
             />
    </LinearLayout>

    <View style="@style/default_devide" />
</LinearLayout>
