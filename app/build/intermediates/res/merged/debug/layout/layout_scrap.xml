<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout style="@style/default_ll" >

        <TextView
            style="@style/default_text"
            android:text="报废单号" />

        <TextView
            android:id="@+id/tv_number"
            style="@style/default_right"
            android:background="@drawable/editext_2" />
    </LinearLayout>

    <LinearLayout style="@style/default_ll"
        android:visibility="gone" >

        <TextView
            style="@style/default_text"
            android:text="操作人" />

        <TextView
            android:id="@+id/tv_createOperater"
            style="@style/default_right"
            android:background="@drawable/editext_2" />
    </LinearLayout>

    <LinearLayout style="@style/default_ll" >

        <TextView
            style="@style/default_text"
            android:text="报废原因" />

        <EditText
            android:id="@+id/et_defaultReason"
            style="@style/default_right"
            android:hint="默认报废原因"
            android:background="@drawable/edittext_ok" />
    </LinearLayout>

    <LinearLayout style="@style/default_ll" >

        <TextView
            style="@style/default_text"
            android:text="报废数量" />

        <TextView
            android:id="@+id/tv_count"
            android:text="0"
            style="@style/default_right" />

        <Button
            android:id="@+id/btn_confirmScrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认报废"
            android:background="@drawable/selector_bg_btn"
            android:textSize="13sp" />
    </LinearLayout>

    <com.hiultra.assetManagerNeutral.ui.view.SwipeDismissListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:layout_weight="1" />

</LinearLayout>